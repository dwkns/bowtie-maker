<!-- Right Column - Contextual Edit Box -->
  <div class="w-80">
    <div
      id="contextual-edit-box"
      class="sticky top-8 p-6 border border-gray-300 rounded bg-white shadow-sm"
    >
      <div class="mb-6">
        <h3 class="text-xl font-medium text-gray-700 mb-2">
          Segment Editor
        </h3>
        <p class="text-sm text-gray-500">
          Click on a segment to edit its properties
        </p>
      </div>

      <!-- Contextual Editor -->
      <div id="contextual-editor">
        <div class="space-y-4">
          <!-- Label Input -->
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">
              Label
            </label>
            <input
              type="text"
              class="contextual-label-input w-full h-8 text-xs text-left border border-gray-300 rounded px-2 focus:outline-none focus:border-blue-500 text-black disabled:opacity-50 disabled:cursor-not-allowed disabled:bg-gray-100"
              placeholder="Enter label text"
              value=""
              disabled
            />
          </div>

          <!-- Color Controls -->
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">
              Color
            </label>
            <div class="flex items-center space-x-2">
              <input
                type="color"
                class="w-16 h-10 rounded cursor-pointer contextual-color-input disabled:opacity-50 disabled:cursor-not-allowed disabled:bg-gray-100"
                value="#d1d5db"
                style="background-color: #d1d5db;"
                disabled
              />
              <div class="flex items-center border border-gray-300 rounded bg-gray-50">
                <span
                  class="text-xs text-gray-500 font-mono px-2 py-1.5 border-r border-gray-300 bg-gray-100"
                  >#</span
                >
                <input
                  type="text"
                  class="contextual-hex-input w-full h-8 text-xs text-center font-mono border-0 bg-transparent px-2 focus:outline-none text-black disabled:opacity-50 disabled:cursor-not-allowed disabled:bg-gray-100"
                  placeholder=""
                  value=""
                  disabled
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

